@model List<SliderImageListItemVM>

<table class="table table-bordered">

    <thead>
        <a type="button" class="btn btn-success" asp-action="Create">Create</a>
        <tr class="bg-primary text-white">
            <th>Id</th>
            <th>ImageUrl</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
        <td class="text-center" colspan="6">No data</td>
        }
        else{
            @foreach(var item in Model)
            {
                    <tr>
                        <td>@item.Id</td>
                        <td><img src="@item.ImageUrl"></td>
                        <td>
                            <a type="button" class="btn btn-secondary" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
            }
        }
    </tbody>
</table>