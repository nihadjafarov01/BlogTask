@using Blog.Areas.Admin.Viewmodels.Auths;
@{
    Layout = null;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model RegisterVM

<!DOCTYPE html>
<!-- Coding by CodingLab | www.codinglabweb.com-->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Responsive Login and Signup Form </title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/auth/css/style.css">

    <!-- Boxicons CSS -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>

</head>
<body>
    <section class="container forms">

        <!-- Signup Form -->

        <section class="container forms show-signup">

            <!-- Signup Form -->

            <div class="form signup">
                <div class="form-content">
                    <header>Signup</header>
                    <form asp-action="Register" method="post">
                        <div class="field input-field">
                            <input asp-for="Email" type="email" placeholder="Email" class="input">
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="field input-field">
                            <input asp-for="Password" type="password" placeholder="Create password" class="password">
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="field input-field">
                            <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password" class="password">
                            <i class="bx bx-hide eye-icon"></i>
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="field button-field">
                            <button type="submit">Signup</button>
                        </div>
                    </form>

                    <div class="form-link">
                        <span>Already have an account? <a asp-action="Login" class="link login-link">Login</a></span>
                    </div>
                </div>

                <div class="line"></div>

                <div class="media-options">
                    <a href="#" class="field facebook">
                        <i class="bx bxl-facebook facebook-icon"></i>
                        <span>Login with Facebook</span>
                    </a>
                </div>

                <div class="media-options">
                    <a href="#" class="field google">
                        <img src="images/google.png" alt="" class="google-img">
                        <span>Login with Google</span>
                    </a>
                </div>

            </div>
        </section>

    <!-- JavaScript -->
    <script src="~/auth/js/script.js"></script>
</body>
</html>